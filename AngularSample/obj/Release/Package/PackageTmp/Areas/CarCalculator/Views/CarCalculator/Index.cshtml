
<script src="~/Scripts/CarCalculator/CarCalculatorApp.js"></script>
<script src="~/Scripts/CarCalculator/CarModule.js"></script>

<div id="wrapper" ng-app="CarCalculatorApp" ng-controller="CarController as carCtrl" ng-init="getCars()">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/CarCalculator/CarCalculator/index">Kalkulator spalania</a>

      
               
           
            
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="glyphicon glyphicon-hand-right" aria-hidden="true" title="Wybierz auto"></span> 
                </a>
                <ul class="dropdown-menu dropdown-messages">
                    <li>
                        <form class="form-inline nav navbar-top-links navbar-right">
                            <div class="form-group">

                                <select class="form-control input" ng-model="selectedCar" ng-options="c as c.carName for c in cars" ng-change="setDefault()">
                                    <option value="" disabled selected>Wybierz samochód</option>
                                </select>

                            </div>

                            <button class="btn btn-default" data-toggle="modal" data-target="#newCarModal">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </button>
                            <button class="btn btn-default" ng-click="deleteCar()">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>


                        </form>
                    </li>
                    <li class="divider"></li>
                   
                </ul>
                <!-- /.dropdown-messages -->
            </li>
        </ul>



        <div class="navbar-default sidebar" role="navigation" ng-controller="TabController as tabCtrl">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li ng-class="{active: currentTab===0}"><a href="#/dashboard" ng-click="setTab(0)">Informacje</a></li>
                    <li ng-class="{active: currentTab===1}"><a href="#/list" ng-click="setTab(1)">Historia tankowań</a></li>
                    <li>
                        <a href="#"> Statystyki</a>
                        <ul class="nav nav-second-level collapse">
                            <li ng-class="{active: isSelected(2)}"><a href="#/stats" ng-click="setTab(2)">Przebieg</a></li>
                            <li ng-class="{active: isSelected(3)}"><a href="#/stats" ng-click="setTab(3)">Spalanie</a></li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{selectedCar.carName}}</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div ng-view> </div>
            </div>
           
        </div>
       
    </div>
    <!-- /#page-wrapper -->

    <div class="modal fade" id="newCarModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Dodaj nowy samochód</h4>
                </div>
                <div class="modal-body">
                    <form class="form-inline" name="carForm">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Nazwa: </div>
                                <input type="text" class="form-control" id="carName" ng-model="newCar.carName" placeholder="Wpisz nazwę samochodu" required>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button class="closeModal btn btn-default" type="button" data-dismiss="modal">Zamknij</button>
                            <button type="button" class="btn btn-primary closeModal" value="Dodaj" ng-disabled="!carForm.$valid" ng-click="addCar()">Zapisz</button>
                        </div>
                    </form>


                </div>

            </div>
        </div>
    </div>
   
</div>
<!-- /#wrapper -->


